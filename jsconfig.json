{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDirs": [
      "src"
    ]
  },
  "path-intellisense.mappings": {
    "@/*": "${workspaceRoot}/src/*"
  },
  "exclude": ["node_modules", "dist", "**/node_modules/*"]
}